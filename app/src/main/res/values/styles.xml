<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!--BaseDialog弹出动画-->
    <style name="FromBottomAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_from_bottom_anim_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_from_bottom_anim_out</item>
    </style>
    <!--BaseDialog样式-->
    <style name="BaseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="AppTheme.Launcher">

        <item name="android:windowBackground">@null</item>

        <item name="android:windowDisablePreview">true</item>

    </style>

    <style name="Kt.DownIn" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/AudioPlayAnim</item>
    </style>

    <style name="AudioPlayAnim" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
        <!--马上要进入到的Activity的动画,页面B-->
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_bottom</item>
        <!--马上要推到后台或者finish的Activity的动画,页面A-->
        <item name="android:activityOpenExitAnimation">@anim/anim_no</item>
        <!--退出即将回到的Activity的动画,页面A-->
        <item name="android:activityCloseEnterAnimation">@anim/anim_no</item>
        <!--当前即将finish退出的Activity的动画,页面B-->
        <item name="android:activityCloseExitAnimation">@anim/slide_out_bottom</item>
    </style>


    <style name="commonLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_line1</item>
        <item name="android:layout_marginLeft">@dimen/dp30</item>
        <item name="android:layout_marginRight">@dimen/dp30</item>
        <item name="android:background">@color/common_item_line_color</item>
    </style>


    <style name="login_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginLeft">@dimen/dp30</item>
        <item name="android:layout_marginRight">@dimen/dp30</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_layout_grey_bg</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="pop_anim_style">
        <item name="android:windowEnterAnimation">@anim/pop_show_up</item>
        <item name="android:windowExitAnimation">@anim/pop_hide_down</item>
    </style>

    <style name="alert_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="history_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/common_white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/sp22</item>
    </style>

    <style name="history_title_text_style" parent="history_text_style">
        <item name="android:textColor">@color/common_title_text</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="etdit_nikename">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">18</item>
    </style>

    <style name="myDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/mydialog_anim_style</item>
    </style>

    <style name="mydialog_anim_style">
        <item name="android:windowEnterAnimation">@anim/mydialog_anim_in</item>
        <item name="android:windowExitAnimation">@anim/mydialog_anim_out</item>
    </style>


    <style name="text_sleep_item_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/common_white</item>
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">17dp</item>
        <item name="android:layout_marginBottom">18dp</item>
    </style>


    <style name="check_sleep">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:button">@drawable/mode_pull</item>
    </style>


    <!--权限说明页面控件style-->
    <style name="PermissionCommParentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">5dp</item>
        <item name="background">@drawable/item_comm_main_layout</item>
    </style>
    <!--左侧图片-->
    <style name="PermissionCommLeftImgStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <!--上方标题-->
    <style name="PermissionCommTopTitleStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:padding">3dp</item>
    </style>
    <!--下方描述-->
    <style name="PermissionCommBotDescStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:padding">3dp</item>
    </style>
    <!--右侧图片-->
    <style name="PermissionCommRightImgStyle">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

</resources>
