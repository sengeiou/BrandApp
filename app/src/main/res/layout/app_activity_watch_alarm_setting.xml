<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg">


    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:background="@drawable/shape_btn_white_20_bg"
        android:orientation="vertical">


       <phone.gym.jkcq.com.socialmodule.shadow.ShadowLayout
            android:id="@+id/mShadowLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:hl_cornerRadius="20dp"
            app:hl_shadowColor="#0d000000"
            app:hl_shadowLimit="10dp"
            app:hl_shadowOffsetY="5dp">


            <bike.gymproject.viewlibray.ItemView
                android:id="@+id/iv_watch_alarm_setting_open"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60"
                android:onClick="onClick"
                app:contentSize="@dimen/sp16"
                app:contentText=""
                app:contentTextColor="@color/common_white"
                app:itemText="@string/watch_alarm_setting_open"
                app:itemviewTitleSize="@dimen/sp16"
                app:showArrow="false"
                app:showBottomLine="true"
                app:showCheckModel="true"
                app:showRemind="false" />
        </phone.gym.jkcq.com.socialmodule.shadow.ShadowLayout>


        <bike.gymproject.viewlibray.ItemView
            android:id="@+id/iv_watch_alarm_setting_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp60"
            android:background="@drawable/common_item_bg_selector"
            android:onClick="onClick"
            app:contentSize="@dimen/sp16"
            app:contentText="8:00"
            app:contentTextColor="@color/common_white"
            app:itemText="@string/watch_alarm_setting_time"
            app:itemviewTitleSize="@dimen/sp16"
            app:showArrow="true"
            app:showBottomLine="true"
            app:showCheckModel="false"
            app:showRemind="false" />

        <bike.gymproject.viewlibray.ItemView
            android:id="@+id/iv_watch_alarm_setting_repeat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp60"
            android:onClick="onClick"
            app:contentSize="@dimen/sp16"
            app:contentText=""
            app:contentTextColor="@color/common_white"
            app:itemText="@string/watch_alarm_setting_repeat"
            app:itemviewTitleSize="@dimen/sp16"
            app:showArrow="true"
            app:showBottomLine="true"
            app:showCheckModel="false"
            app:showRemind="false" />
    </LinearLayout>
</RelativeLayout>


