<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/common_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F2F2F2"
            android:paddingLeft="@dimen/dp30"
            android:paddingTop="@dimen/dp10"
            android:paddingRight="@dimen/dp30"
            android:paddingBottom="@dimen/dp10"
            android:text="@string/distrub_tips"
            android:textColor="@color/common_white"
            android:textSize="@dimen/sp15" />

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:background="@drawable/shape_btn_white_20_bg"
            android:orientation="vertical">


           <phone.gym.jkcq.com.socialmodule.shadow.ShadowLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:hl_cornerRadius="20dp"
                app:hl_shadowColor="#0d000000"
                app:hl_shadowLimit="10dp"
                app:hl_shadowOffsetY="5dp">

                <bike.gymproject.viewlibray.ItemView
                    android:id="@+id/iv_watch_disturb_setting_open"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp60"
                    android:onClick="onClick"
                    app:contentSize="@dimen/sp14"
                    app:contentText=""
                    app:contentTextColor="@color/common_gray_color"
                    app:itemText="@string/watch_disturb_setting_open"
                    app:itemviewTitleSize="@dimen/sp15"
                    app:showArrow="false"
                    app:showBottomLine="true"
                    app:showCheckModel="true"
                    app:showRemind="false" />
            </phone.gym.jkcq.com.socialmodule.shadow.ShadowLayout>

            <bike.gymproject.viewlibray.ItemView
                android:id="@+id/iv_watch_disturb_setting_start"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60"
                android:onClick="onClick"
                app:contentSize="@dimen/sp16"
                app:contentText="8:00"
                app:contentTextColor="@color/common_white"
                app:itemText="@string/watch_disturb_setting_start"
                app:itemviewTitleSize="@dimen/sp16"
                app:showArrow="true"
                app:showBottomLine="true"
                app:showCheckModel="false"
                app:showRemind="false" />

            <bike.gymproject.viewlibray.ItemView
                android:id="@+id/iv_watch_disturb_setting_end"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60"
                android:onClick="onClick"
                app:contentSize="@dimen/sp16"
                app:contentText="8:00"
                app:contentTextColor="@color/common_white"
                app:itemText="@string/watch_disturb_setting_end"
                app:itemviewTitleSize="@dimen/sp16"
                app:showArrow="true"
                app:showBottomLine="true"
                app:showCheckModel="false"
                app:showRemind="false" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>


