<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical"
    android:padding="@dimen/dp15">


    <bike.gymproject.viewlibray.ItemView
        android:id="@+id/itemview_feedback"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:layout_marginTop="@dimen/dp15"
        android:background="@drawable/shape_btn_white_20_bg"
        android:onClick="onClick"
        app:contentSize="@dimen/sp16"
        app:itemText="@string/feedback"
        app:itemviewTitleSize="@dimen/sp16"
        app:showArrow="true"
        app:showBottomLine="false"
        app:showCheckModel="false"
        app:showRemind="false" />

    <bike.gymproject.viewlibray.ItemView
        android:id="@+id/itemview_clear_acache"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:layout_below="@id/itemview_feedback"
        android:layout_marginTop="@dimen/dp15"
        android:background="@drawable/shape_btn_white_20_bg"
        android:onClick="onClick"
        app:contentSize="@dimen/sp16"
        app:itemText="@string/clear_acache"
        app:itemviewTitleSize="@dimen/sp16"
        app:showArrow="true"
        app:showBottomLine="false"
        app:showCheckModel="false"
        app:showRemind="false" />

    <bike.gymproject.viewlibray.ItemView
        android:id="@+id/itemview_about"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:layout_below="@id/itemview_clear_acache"
        android:layout_marginTop="@dimen/dp15"
        android:background="@drawable/shape_btn_white_20_bg"
        android:onClick="onClick"
        app:contentSize="@dimen/sp16"
        app:itemText="@string/about_us"
        app:itemviewTitleSize="@dimen/sp16"
        app:showArrow="true"
        app:showBottomLine="true"
        app:showCheckModel="false"
        app:showRemind="false" />


    <bike.gymproject.viewlibray.ItemView
        android:id="@+id/log"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:layout_below="@id/itemview_about"
        android:layout_marginTop="@dimen/dp15"
        android:background="@drawable/shape_btn_white_20_bg"
        android:onClick="onClick"
        android:visibility="gone"
        app:contentSize="@dimen/sp16"
        app:itemText="Log"
        app:itemviewTitleSize="@dimen/sp16"
        app:showArrow="true"
        app:showCheckModel="false"
        app:showRemind="false" />


    <TextView
        android:id="@+id/btn_login_out"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp50"
        android:background="@drawable/common_button_bg_selector"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/quit_login"
        android:textColor="@drawable/common_button_text_selector"
        android:textSize="@dimen/sp18" />
</RelativeLayout>
