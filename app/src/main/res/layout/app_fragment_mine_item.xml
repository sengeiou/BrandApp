<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="91dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/dp5"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="@dimen/dp5"
        android:background="@drawable/common_item_selector">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp3"
            android:layout_marginRight="@dimen/dp5"
            android:layout_toLeftOf="@+id/device_property"
            android:layout_toRightOf="@+id/iv_icon"
            android:gravity="left|center_vertical"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textColor="@color/common_white"
                android:textSize="@dimen/sp17" />

            <TextView
                android:id="@+id/tv_battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_mine_batter0"
                android:drawablePadding="@dimen/dp8"
                android:gravity="center"
                android:text="50%"
                android:textColor="@color/common_white"
                android:textSize="@dimen/sp13"
                android:visibility="gone" />

        </LinearLayout>


        <TextView
            android:id="@+id/device_property"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/icon_arrow_left"
            android:gravity="center"
            android:text=""
            android:textColor="@color/common_tips_color"
            android:textSize="@dimen/sp15" />
    </RelativeLayout>

    <View
        android:id="@+id/view_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:background="@color/common_item_line_color" />
</RelativeLayout>
