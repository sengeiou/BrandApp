<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.2"
        android:background="@color/white"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/tv_update_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"

            android:gravity="center"
            android:paddingTop="@dimen/dp8"
            android:text=""
            android:textColor="@color/common_white" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="@color/white"
        android:gravity="center">

        <com.isport.brandapp.home.view.circlebar.BandCirclebarAnimatorLayout
            android:id="@+id/layout_data_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />


    </RelativeLayout>

    <bike.gymproject.viewlibray.BebasNeueTextView
        android:id="@+id/tv_goal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="@color/common_white"
        android:textSize="@dimen/sp20"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp20"
        android:background="@drawable/shape_bind_device_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <ImageView
                android:id="@+id/iv_dis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp40"
                android:layout_marginRight="@dimen/dp28"
                android:src="@drawable/icon_band_dis" />


            <View
                android:id="@+id/view_centre"
                android:layout_width="@dimen/dp1"
                android:layout_height="@dimen/dp1"
                android:layout_centerInParent="true" />

            <bike.gymproject.viewlibray.BebasNeueTextView
                android:id="@+id/tv_dis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/view_centre"
                android:layout_toRightOf="@id/iv_dis"
                android:text="@string/app_band_dis"
                android:textColor="@color/common_white"
                android:textSize="@dimen/sp20" />

            <bike.gymproject.viewlibray.BebasNeueTextView
                android:id="@+id/tv_dis_analyze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_centre"
                android:layout_toRightOf="@id/iv_dis"
                android:text="@string/saved_title"
                android:textColor="@color/common_title_button_text_enabled"
                android:textSize="@dimen/sp16" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <ImageView
                android:id="@+id/iv_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp40"
                android:layout_marginRight="@dimen/dp28"
                android:src="@drawable/icon_band_cal" />


            <View
                android:id="@+id/view_cal_centre"
                android:layout_width="@dimen/dp1"
                android:layout_height="@dimen/dp1"
                android:layout_centerInParent="true" />

            <bike.gymproject.viewlibray.BebasNeueTextView
                android:id="@+id/tv_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/view_cal_centre"
                android:layout_toRightOf="@id/iv_cal"
                android:text="@string/app_band_cal"
                android:textColor="@color/common_white"
                android:textSize="@dimen/sp20" />

            <bike.gymproject.viewlibray.BebasNeueTextView
                android:id="@+id/tv_cal_analyze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_cal_centre"
                android:layout_toRightOf="@id/iv_cal"
                android:text="@string/burned_title"
                android:textColor="@color/common_title_button_text_enabled"
                android:textSize="@dimen/sp16" />

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>