<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp15">

    <TextView
        android:id="@+id/tv_sport_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="12:05"
        android:textColor="@color/common_rope_time_color"></TextView>

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="@dimen/dp60">

        <ImageView
            android:id="@+id/iv_sport_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp15"
            android:src="@drawable/icon_rope_history_free" />

        <TextView
            android:id="@+id/tv_sport_dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_sport_type"
            android:layout_toRightOf="@+id/iv_sport_type"
            android:textStyle="bold"
            android:text="0"
            android:textColor="@color/common_text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_sport_dis_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_sport_dis"
            android:layout_toRightOf="@+id/tv_sport_dis"
            android:text="@string/unit_distance"
            android:textColor="@color/common_text_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_sport_recode_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_sport_type"
            android:layout_toRightOf="@+id/iv_sport_type"
            android:text="00:00:01"
            android:textColor="@color/common_rope_time_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_sport_recode_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="0"
            android:textColor="@color/common_name_profile_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_avg_cout_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_avg_cout"
            android:layout_marginBottom="@dimen/dp2"
            android:layout_toRightOf="@+id/tv_avg_cout"
            android:textColor="@color/common_name_profile_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_sport_recode_cal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_cal_unit"
            android:text="0"
            android:textColor="@color/common_name_profile_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_cal_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp2"
            android:layout_toLeftOf="@+id/iv_arrow_right"
            android:text="@string/sport_cal_unit"
            android:textColor="@color/common_name_profile_color"
            android:textSize="12sp" />


        <ImageView
            android:id="@+id/iv_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp15"
            android:src="@drawable/icon_rope_history_right"

            />
    </RelativeLayout>

</LinearLayout>


