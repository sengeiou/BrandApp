<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_scan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center">


        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp7"
            android:src="@drawable/conn_radar_bg" />

        <ImageView
            android:id="@+id/iv_conn_rotate"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp7"
            android:src="@drawable/conn_radar_rotate" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <brandapp.isport.com.basicres.commonrecyclerview.RefreshRecyclerView
            android:id="@+id/recycler_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--android:background="@color/common_white"-->
        </brandapp.isport.com.basicres.commonrecyclerview.RefreshRecyclerView>
    </LinearLayout>
</LinearLayout>