<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginBottom="@dimen/dp5"
        android:background="@drawable/shape_btn_white_20_bg"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/layout_sport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sum_sport_min"
                android:textColor="@color/common_white"
                android:textSize="@dimen/sp15"

                />

            <bike.gymproject.viewlibray.BebasNeueTextView
                android:id="@+id/tv_day_sum_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:text="0"
                android:textColor="@color/common_white"
                android:textSize="@dimen/sp36"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unit_minute"
                android:textColor="@color/common_white"
                android:textSize="@dimen/sp15"

                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_sport_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_sport"
            android:gravity="center"
            android:text="2019-08-07"
            android:textColor="@color/common_gray_color"
            android:textSize="@dimen/sp13" />


        <TextView
            android:id="@+id/tv_start_sport"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_three"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp15"
            android:background="@drawable/app_frame_all_green"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="@dimen/dp8"
            android:paddingBottom="@dimen/dp8"
            android:text="@string/sport_start"
            android:textColor="@color/white"
            android:textSize="@dimen/sp15" />


    </RelativeLayout>

</LinearLayout>



















