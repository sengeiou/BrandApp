<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.isport.brandapp.Home.view.circlebar.CirclebarAnimatorView
        android:id="@+id/objectAnimatorView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />


    <bike.gymproject.viewlibray.BebasNeueTextView
        android:id="@+id/tv_sport_steps"
        textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_cetern"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/no_data"

        android:textAllCaps="false"
        android:textColor="@color/common_white"
        android:textSize="@dimen/sp30" />

    <View
        android:id="@+id/view_cetern"
        android:layout_width="90dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="@color/common_item_line_color" />

    <TextView
        android:id="@+id/tv_step_tagert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_cetern"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp3"
        android:drawableBottom="@drawable/icon_main_step_tage"
        android:text="目标60000步"
        android:textColor="@color/common_gray_color"
        android:textSize="@dimen/sp13" />


</RelativeLayout>