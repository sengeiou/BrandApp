<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_black_75"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/common_item_selector"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_challeg_type_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp60"
            android:layout_marginBottom="@dimen/dp25"
            android:gravity="center"
            android:text="你已完成挑战"
            android:textColor="@color/common_white"
            android:textSize="@dimen/sp16" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <bike.gymproject.viewlibray.AkrobatNumberTextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="01:30"
                    android:textColor="@color/common_white"
                    android:textSize="@dimen/sp24"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/dialogRopeGoalTimeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_white"
                    android:textSize="@dimen/sp12" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <bike.gymproject.viewlibray.AkrobatNumberTextView
                    android:id="@+id/tv_rope_avg_heartTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="135"
                    android:textColor="@color/common_white"
                    android:textSize="@dimen/sp24"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rope_avg_unit_lower"
                    android:textColor="@color/common_white"
                    android:textSize="@dimen/sp12" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/rope_real_rope_time"
                android:textColor="@color/common_name_profile_color"
                android:textSize="@dimen/sp14"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/average_heart"
                android:textColor="@color/common_name_profile_color"
                android:textSize="@dimen/sp14" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_bottom_value"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <bike.gymproject.viewlibray.AkrobatNumberTextView
                    android:id="@+id/tv_cal_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="999"
                    android:textColor="@color/common_white"
                    android:textSize="@dimen/sp24"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_bottom_unitl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="千卡"
                    android:textColor="@color/common_white"
                    android:textSize="@dimen/sp12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <bike.gymproject.viewlibray.AkrobatNumberTextView
                    android:id="@+id/tv_rope_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="999"
                    android:textColor="@color/common_white"
                    android:textSize="@dimen/sp24"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/ropePkDialogGoalTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rope_unit"
                    android:textColor="@color/common_white"
                    android:textSize="@dimen/sp12"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">


            <TextView
                android:id="@+id/tv_bottom_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/rope_traninning_cal"
                android:textColor="@color/common_name_profile_color"
                android:textSize="@dimen/sp14"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/rope_number"
                android:textColor="@color/common_name_profile_color"
                android:textSize="@dimen/sp14"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_back"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp15"
                android:background="@drawable/shape_gray_bg"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/back"
                android:textColor="@color/common_white"
                android:textSize="@dimen/sp18"/>


            <TextView
                android:id="@+id/dialogRopeShareTv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp15"
                android:background="@drawable/rope_share_btn"
                android:gravity="center"
                android:padding="8dp"
                android:text="分享喜悦"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18"/>

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/iv_state"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-50dp"
        android:src="@drawable/bg_rope_success" />

    <TextView
        android:id="@+id/tv_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-30dp"
        android:text="@string/rope_unit"
        android:textColor="@color/white"
        android:textSize="@dimen/sp28" />

</RelativeLayout>
