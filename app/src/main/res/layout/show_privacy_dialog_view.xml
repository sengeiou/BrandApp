<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:gravity="center"
    android:layout_height="match_parent">

    <TextView
        android:textColor="@color/common_name_color"
        android:layout_gravity="center"
        android:padding="5dp"
        android:textSize="23sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户协议和隐私政策"/>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="17sp"
           android:padding="8dp"
           android:layout_margin="10dp"
           android:lineSpacingExtra="5dp"
           android:text="@string/string_privacy_str"/>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:gravity="center"
           android:orientation="vertical">


           <TextView
               android:id="@+id/userAgreementTv"
               android:layout_width="wrap_content"
               android:textSize="18sp"
               android:padding="5dp"
               android:textColor="@color/blue_00aaee"
               android:layout_height="wrap_content"
               android:text="《奔啦啦用户协议》"/>

           <TextView
               android:id="@+id/privacyTv"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="18sp"
               android:padding="5dp"
               android:textColor="@color/blue_00aaee"
               android:text="《奔啦啦隐私政策》"/>


       </LinearLayout>


   </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <Button
            android:id="@+id/privacyCancelBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/item_comm_main_layout"
            android:layout_height="wrap_content"
            android:text="不同意"/>


        <Button
            android:id="@+id/privacyConfirmBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_00aaee"
            android:background="@drawable/item_comm_main_layout"
            android:text="同意"/>


    </LinearLayout>
</LinearLayout>