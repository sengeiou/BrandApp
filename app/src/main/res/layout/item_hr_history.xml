<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_view"
    android:layout_width="132dp"
    android:layout_height="96dp"
    android:layout_margin="@dimen/dp8"
    android:background="@drawable/shape_btn_white_20_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp15">

        <TextView
            android:id="@+id/tv_follow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/hr_select_times"
            android:textColor="@color/common_white"
            android:textSize="@dimen/friend_sp13" />

        <TextView
            android:id="@+id/tv_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/friend_text_black_color"
            android:textSize="@dimen/sp16"
            tools:text="00:00ï½ž00:00" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <bike.gymproject.viewlibray.AkrobatNumberTextView
                android:id="@+id/tv_max_hr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/common_white"
                android:textSize="@dimen/sp16" />

            <bike.gymproject.viewlibray.AkrobatNumberTextView
                android:id="@+id/tv_min_hr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/common_white"
                android:textSize="@dimen/sp16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_max_hr_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/watch_heart_rate_max"
                android:textColor="@color/common_white"
                android:textSize="@dimen/sp10" />

            <TextView
                android:id="@+id/tv_min_hr_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/watch_heart_rate_min"
                android:textColor="@color/common_white"
                android:textSize="@dimen/sp10" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>