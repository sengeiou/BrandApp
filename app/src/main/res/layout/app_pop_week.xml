<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginBottom="@dimen/dp15"
        android:background="@drawable/shape_btn_white_20_bg"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:onClick="onClick"
                    android:text="@string/cancel"
                    android:textColor="@color/common_text_color"
                    android:textSize="@dimen/sp16" />


                <TextView
                    android:id="@+id/tv_determine"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp60"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:onClick="onClick"
                    android:text="@string/common_dialog_ok"
                    android:textColor="@color/common_view_color"
                    android:textSize="@dimen/sp16" />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/layout_sum"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/sun" />


                <RelativeLayout
                    android:clickable="false"
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:clickable="false"
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:layout_centerInParent="true"
                        android:src="@drawable/sel_week_nor"></ImageView>

                    <ImageView
                        android:clickable="false"
                        android:id="@+id/iv_sun"
                        android:layout_width="@dimen/dp12"
                        android:layout_height="@dimen/dp12"
                        android:layout_centerInParent="true"
                        android:src="@drawable/sel_week_yes" />

                </RelativeLayout>


                <CheckBox
                    android:id="@+id/cb_sun"
                    style="@style/CustomCheckBoxTheme"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_press_color" />

            <RelativeLayout
                android:id="@+id/layout_mon"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/mon" />

                <RelativeLayout
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:layout_alignParentRight="true"
                    android:clickable="false"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/dp20"
                        android:clickable="false"
                        android:layout_height="@dimen/dp20"
                        android:layout_centerInParent="true"
                        android:src="@drawable/sel_week_nor"></ImageView>

                    <ImageView
                        android:id="@+id/iv_mon"
                        android:clickable="false"
                        android:layout_width="@dimen/dp12"
                        android:layout_height="@dimen/dp12"
                        android:layout_centerInParent="true"
                        android:src="@drawable/sel_week_yes" />

                </RelativeLayout>

                <CheckBox
                    android:id="@+id/cb_mon"
                    style="@style/CustomCheckBoxTheme"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_press_color" />

            <RelativeLayout
                android:id="@+id/layout_tue"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/tue" />

                <RelativeLayout

                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:clickable="false">

                    <ImageView
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:layout_centerInParent="true"
                        android:clickable="false"
                        android:src="@drawable/sel_week_nor"></ImageView>

                    <ImageView
                        android:id="@+id/iv_tue"
                        android:layout_width="@dimen/dp12"
                        android:layout_height="@dimen/dp12"
                        android:layout_centerInParent="true"
                        android:clickable="false"
                        android:src="@drawable/sel_week_yes" />

                </RelativeLayout>


                <CheckBox
                    android:id="@+id/cb_tue"
                    style="@style/CustomCheckBoxTheme"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/common_press_color" />

            <RelativeLayout
                android:id="@+id/layout_wed"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/wed" />

                <RelativeLayout
                    android:clickable="false"
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:clickable="false"
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:layout_centerInParent="true"
                        android:src="@drawable/sel_week_nor"></ImageView>

                    <ImageView
                        android:clickable="false"
                        android:id="@+id/iv_wed"
                        android:layout_width="@dimen/dp12"
                        android:layout_height="@dimen/dp12"
                        android:layout_centerInParent="true"
                        android:src="@drawable/sel_week_yes" />

                </RelativeLayout>


                <CheckBox
                    android:id="@+id/cb_wed"
                    style="@style/CustomCheckBoxTheme"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_press_color" />

            <RelativeLayout
                android:id="@+id/layout_thu"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/thu" />

                <RelativeLayout
                    android:clickable="false"
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:clickable="false"
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:layout_centerInParent="true"
                        android:src="@drawable/sel_week_nor"></ImageView>

                    <ImageView
                        android:clickable="false"
                        android:id="@+id/iv_thu"
                        android:layout_width="@dimen/dp12"
                        android:layout_height="@dimen/dp12"
                        android:layout_centerInParent="true"
                        android:src="@drawable/sel_week_yes" />

                </RelativeLayout>


                <CheckBox
                    android:id="@+id/cb_thu"
                    style="@style/CustomCheckBoxTheme"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_press_color" />

            <RelativeLayout
                android:id="@+id/layout_fri"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/fri" />

                <RelativeLayout
                    android:clickable="false"
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:clickable="false"
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:layout_centerInParent="true"
                        android:src="@drawable/sel_week_nor"></ImageView>

                    <ImageView
                        android:clickable="false"
                        android:id="@+id/iv_fri"
                        android:layout_width="@dimen/dp12"
                        android:layout_height="@dimen/dp12"
                        android:layout_centerInParent="true"
                        android:src="@drawable/sel_week_yes" />

                </RelativeLayout>


                <CheckBox
                    android:id="@+id/cb_fri"
                    style="@style/CustomCheckBoxTheme"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_press_color" />

            <RelativeLayout
                android:id="@+id/layout_sat"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/sat" />

                <RelativeLayout
                    android:clickable="false"
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:clickable="false"
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:layout_centerInParent="true"
                        android:src="@drawable/sel_week_nor"></ImageView>

                    <ImageView
                        android:clickable="false"
                        android:id="@+id/iv_sat"
                        android:layout_width="@dimen/dp12"
                        android:layout_height="@dimen/dp12"
                        android:layout_centerInParent="true"
                        android:src="@drawable/sel_week_yes" />

                </RelativeLayout>


                <CheckBox
                    android:id="@+id/cb_sat"
                    style="@style/CustomCheckBoxTheme"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:visibility="gone" />
            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>
</RelativeLayout>