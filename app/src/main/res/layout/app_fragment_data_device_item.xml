<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp5"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="@dimen/dp5"
        android:background="@drawable/common_main_item_selector"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_update_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginTop="@dimen/dp10"
            android:text=""
            android:textSize="@dimen/sp13"
            android:textColor="@color/common_gray_color"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_current_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="@dimen/dp20"
                android:src="@drawable/icon_main_heart" />


            <TextView
                android:id="@+id/tv_current_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_current_type"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@+id/iv_current_type"
                android:text="心率"
                android:lineSpacingExtra="-2dp"
                android:textColor="@color/common_white"
                android:textSize="@dimen/sp15" />

            <TextView
                android:id="@+id/tv_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@+id/tv_current_type_name"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/common_main_heart_bg_selector"
                android:gravity="center"
                android:paddingBottom="@dimen/dp6"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="@dimen/dp6"
                android:text="监测"
                android:textColor="@drawable/common_main_heart_text_selector"
                android:textSize="@dimen/sp13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_current_type"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@+id/iv_current_type"
                android:orientation="horizontal">

                <bike.gymproject.viewlibray.BebasNeueTextView
                    android:id="@+id/tv_value_h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp5"
                    android:text="87"
                    android:textColor="@color/common_white"
                    android:textSize="@dimen/sp26"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_unitl_h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp5"
                    android:text=""
                    android:textColor="@color/common_gray_color"
                    android:textSize="@dimen/sp15"
                    android:visibility="gone" />

                <bike.gymproject.viewlibray.BebasNeueTextView
                    android:id="@+id/tv_value_m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="87"
                    android:textColor="@color/common_white"
                    android:textSize="@dimen/sp26"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_unitl_m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_marginRight="@dimen/dp5"
                    android:text="87"
                    android:textColor="@color/common_gray_color"
                    android:textSize="@dimen/sp15"
                    android:visibility="gone" />

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>



















