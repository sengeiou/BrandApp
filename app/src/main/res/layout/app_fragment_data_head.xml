<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginBottom="@dimen/dp5"
        android:background="@drawable/common_main_item_selector"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginTop="@dimen/dp10"
            android:textColor="@color/common_gray_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2">

                <com.isport.brandapp.home.view.circlebar.CirclebarAnimatorLayout
                    android:id="@+id/layout_data_head"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4" />

                <com.isport.brandapp.home.customview.MainHeadDataItemView
                    android:id="@+id/item_dis"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:mainheadDataTitle="@string/display_setting_dis"
                    app:mainheadDataTitleColor="@color/common_white"
                    app:mainheadDataTitleSize="@dimen/sp15"
                    app:mainheadDataUnit="@string/dis_unit"
                    app:mainheadDataUnitColor="@color/common_gray_color"
                    app:mainheadDataUnitSize="@dimen/sp15"
                    app:mainheadDataValue="@string/no_data"
                    app:mainheadDataValueColor="@color/common_white"
                    app:mainheadDataValueUnitSize="@dimen/sp26"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2" />

                <com.isport.brandapp.home.customview.MainHeadDataItemView
                    android:id="@+id/item_cal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"

                    app:mainheadDataTitle="@string/consumption"
                    app:mainheadDataTitleColor="@color/common_white"
                    app:mainheadDataTitleSize="@dimen/sp15"

                    app:mainheadDataUnit="@string/sport_cal_unit"
                    app:mainheadDataUnitColor="@color/common_gray_color"
                    app:mainheadDataUnitSize="@dimen/sp15"

                    app:mainheadDataValue="@string/no_data"
                    app:mainheadDataValueColor="@color/common_white"
                    app:mainheadDataValueUnitSize="@dimen/sp26"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:padding="15dp"
        android:src="@drawable/icon_chage"
        android:visibility="invisible" />

</RelativeLayout>









