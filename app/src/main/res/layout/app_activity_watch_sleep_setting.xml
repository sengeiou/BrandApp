<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >



        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_bind_bg"
            android:orientation="vertical">

            <bike.gymproject.viewlibray.ItemView
                android:id="@+id/iv_watch_sleep_setting_change"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:background="@drawable/common_item_bg_selector"
                android:onClick="onClick"
                app:contentSize="@dimen/sp14"
                app:contentText=""
                app:contentTextColor="@color/common_gray_color"
                app:itemText="@string/watch_sleep_setting_change"
                app:itemviewTitleSize="@dimen/sp15"
                app:showArrow="false"
                app:showBottomLine="true"
                app:showRadioModelChange="true"
                app:showRemind="false" />

            <bike.gymproject.viewlibray.ItemView
                android:id="@+id/iv_watch_sleep_setting_open"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:background="@drawable/common_item_bg_selector"
                android:onClick="onClick"
                app:contentSize="@dimen/sp14"
                app:contentText=""
                app:contentTextColor="@color/common_gray_color"
                app:itemText="@string/watch_sleep_setting_sleep_remind"
                app:itemviewTitleSize="@dimen/sp15"
                app:showArrow="false"
                app:showBottomLine="true"
                app:showCheckModel="true"
                app:showRemind="false" />


            <bike.gymproject.viewlibray.ItemView
                android:id="@+id/iv_watch_disturb_setting_sleep_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:background="@drawable/common_item_bg_selector"
                android:onClick="onClick"
                app:contentSize="@dimen/sp14"
                app:contentText="8:00"
                app:contentTextColor="@color/common_gray_color"
                app:itemText="@string/watch_sleep_setting_sleep_time"
                app:itemviewTitleSize="@dimen/sp15"
                app:showArrow="true"
                app:showBottomLine="true"
                app:showCheckModel="false"
                app:showRemind="false" />

            <bike.gymproject.viewlibray.ItemView
                android:id="@+id/iv_watch_disturb_setting_wakeup_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:background="@drawable/common_item_bg_selector"
                android:onClick="onClick"
                app:contentSize="@dimen/sp14"
                app:contentText="8:00"
                app:contentTextColor="@color/common_gray_color"
                app:itemText="@string/watch_sleep_setting_wakeup_time"
                app:itemviewTitleSize="@dimen/sp15"
                app:showArrow="true"
                app:showBottomLine="true"
                app:showCheckModel="false"
                app:showRemind="false" />
        </LinearLayout>
</RelativeLayout>


