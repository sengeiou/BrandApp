<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contentview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp15"
    android:background="@drawable/shape_btn_white_20_bg">

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/dp250"
        android:layout_height="@dimen/dp92" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginTop="@dimen/dp10"
        android:textStyle="bold"
        android:text="08:00"
        android:textColor="#2F2F33"
        android:textSize="@dimen/sp36" />


    <TextView
        android:id="@+id/tv_repeat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_below="@id/tv_time"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_toLeftOf="@+id/view_car_remind_radio1"
        android:gravity="center_vertical|left"
        android:text="周一"
        android:textColor="#2F2F33"
        android:textSize="@dimen/sp16" />


    <!-- <CheckBox
         android:id="@+id/view_car_remind_radio"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
         android:layout_marginRight="@dimen/dp10"
         android:button="@drawable/checkbox_style"
         android:padding="5dp"
         android:text=""
         android:visibility="visible" />-->
    <ImageView
        android:id="@+id/view_car_remind_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp10"
        android:padding="10dp"
        android:src="@drawable/icon_open"
        android:text=""
        android:visibility="visible" />


</RelativeLayout>

