<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/common_main_item_selector"
        android:orientation="horizontal">

        <bike.gymproject.viewlibray.RecView
            android:id="@+id/recview1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp1"
            android:layout_weight="1"
            android:background="@color/common_bg" />

        <bike.gymproject.viewlibray.RecView
            android:id="@+id/recview2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp1"
            android:layout_weight="1"
            android:background="@color/common_bg" />

        <bike.gymproject.viewlibray.RecView
            android:id="@+id/recview3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp1"
            android:layout_weight="1"
            android:background="@color/common_bg" />

        <bike.gymproject.viewlibray.RecView
            android:id="@+id/recview4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp1"
            android:layout_weight="1"
            android:background="@color/common_bg" />

        <bike.gymproject.viewlibray.RecView
            android:id="@+id/recview5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp1"
            android:layout_weight="1"
            android:background="@color/common_bg" />

        <bike.gymproject.viewlibray.RecView
            android:id="@+id/recview6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp1"
            android:layout_weight="1"
            android:background="@color/common_bg" />

        <bike.gymproject.viewlibray.RecView
            android:id="@+id/recview7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp1"
            android:layout_weight="1"
            android:background="@color/common_bg" />


    </LinearLayout>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp1"
        android:layout_marginRight="@dimen/dp1"
        android:background="@color/common_view_color" />


</RelativeLayout>









