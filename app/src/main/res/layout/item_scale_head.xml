<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp30"
    android:paddingRight="@dimen/dp30">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp70">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/composite_score"
                android:textColor="@color/common_white"
                android:textSize="@dimen/sp20" />

            <bike.gymproject.viewlibray.BebasNeueTextView
                android:id="@+id/tv_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="80"
                android:textColor="@color/common_white"
                android:textSize="@dimen/sp36"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp3"
                android:text="@string/scale_unit"
                android:textColor="@color/common_white"
                android:textSize="@dimen/sp20"/>

            <View
                android:layout_width="360dp"
                android:layout_height="1dp"
                android:layout_weight="1" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_head_stande"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_stander_bg"
            android:gravity="center"
            android:paddingBottom="@dimen/dp4"
            android:paddingTop="@dimen/dp4"
            android:text="标准"
            android:textColor="@color/white"
            android:textSize="@dimen/sp13" />

        <View
            style="@style/commonItemLine"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>
</RelativeLayout>
