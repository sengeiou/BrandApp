<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolBar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:background="@color/blank_40"
    android:paddingEnd="5dp"
    android:paddingStart="5dp">

    <ImageView
        android:id="@+id/iv_find"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp10"
        android:src="@drawable/icon_home_community_find" />





    <LinearLayout
        android:id="@+id/rl_bottom"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp50"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:clipChildren="true"
        android:orientation="vertical">


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/tv_home_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/common_title_button_bg_selector"
                android:button="@null"
                android:drawableBottom="@drawable/radio_home_community_top_selector"
                android:gravity="center"
                android:paddingLeft="@dimen/dp15"
                android:paddingRight="@dimen/dp15"
                android:paddingTop="@dimen/dp3"
                android:text="@string/friend_follow"
                android:textColor="@color/white"
                android:textSize="@dimen/sp14" />
            <View
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp1" />
            <RadioButton
                android:id="@+id/tv_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/common_title_button_bg_selector"
                android:button="@null"
                android:checked="true"
                android:drawableBottom="@drawable/radio_home_community_top_selector"
                android:gravity="center"
                android:paddingLeft="@dimen/dp15"
                android:paddingRight="@dimen/dp15"
                android:paddingTop="@dimen/dp3"
                android:text="@string/friend_all"
                android:textColor="@color/white"
                android:textSize="@dimen/sp14" />


        </RadioGroup>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp10"
        android:src="@drawable/icon_home_community_add" />
</LinearLayout>