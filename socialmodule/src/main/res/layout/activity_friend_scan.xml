<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/common_blank"
    android:orientation="vertical">


    <me.devilsen.czxing.view.ScanView
        android:id="@+id/surface_customize_view_scan"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:paddingTop="@dimen/friend_dp10"
        android:layout_marginTop="@dimen/friend_dp40"
        android:paddingBottom="@dimen/friend_dp10">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/friend_dp15"
            android:src="@drawable/friend_icon_back_white" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/friend_dp17"
            android:text="@string/friend_scan" />

    </RelativeLayout>
</FrameLayout>